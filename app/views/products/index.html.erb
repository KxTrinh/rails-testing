<h1>Awesome Products</h1>
<% @products.each do |product| %>
  <div class="card-product">
    <img src="https://i.ebayimg.com/images/g/zMUAAOSwVOlfAYzp/s-l1600.jpg">
    <div class='card-product-infos'>
      <h2><%= product.name %></h2>
